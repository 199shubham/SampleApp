<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashLandingFragment">
    <fragment
        android:id="@+id/splashLandingFragment"
        android:name="com.aasan.sample.splash.SplashLandingFragment"
        android:label="SplashLandingFragment" >
        <action
            android:id="@+id/action_splashLandingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.aasan.sample.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.aasan.sample.home.HomeFragment"
        android:label="HomeFragment" />
</navigation>